{
    "apiVersion": 3,
    "name": "modular-blocks/image-comparison",
    "version": "1.0.0",
    "title": "Bild-Vergleich",
    "category": "modular-blocks",
    "icon": "image-flip-horizontal",
    "description": "Vergleichen Sie zwei Bilder mit einem interaktiven Schieberegler. Inspiriert von H5P Image Juxtaposition.",
    "keywords": ["vergleich", "bilder", "vorher", "nachher", "slider", "h5p"],
    "textdomain": "modular-blocks-plugin",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css",
    "viewScript": "file:./view.js",
    "attributes": {
        "beforeImage": {
            "type": "object",
            "default": {
                "url": "",
                "alt": "",
                "id": null
            }
        },
        "afterImage": {
            "type": "object",
            "default": {
                "url": "",
                "alt": "",
                "id": null
            }
        },
        "beforeLabel": {
            "type": "string",
            "default": "Vorher"
        },
        "afterLabel": {
            "type": "string",
            "default": "Nachher"
        },
        "orientation": {
            "type": "string",
            "default": "horizontal"
        },
        "startingPosition": {
            "type": "number",
            "default": 50
        },
        "showLabels": {
            "type": "boolean",
            "default": true
        },
        "hoverAnimation": {
            "type": "boolean",
            "default": true
        },
        "height": {
            "type": "number",
            "default": 400
        },
        "sliderColor": {
            "type": "string",
            "default": "#0073aa"
        },
        "sliderWidth": {
            "type": "number",
            "default": 4
        },
        "handleSize": {
            "type": "number",
            "default": 48
        },
        "animationSpeed": {
            "type": "number",
            "default": 2
        },
        "labelBackground": {
            "type": "string",
            "default": "rgba(0, 0, 0, 0.7)"
        },
        "labelColor": {
            "type": "string",
            "default": "#ffffff"
        }
    },
    "supports": {
        "html": false,
        "align": ["wide", "full"],
        "spacing": {
            "margin": true,
            "padding": true
        }
    },
    "example": {
        "attributes": {
            "beforeLabel": "Original",
            "afterLabel": "Bearbeitet",
            "startingPosition": 30
        }
    }
}