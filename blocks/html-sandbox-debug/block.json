{
  "apiVersion": 3,
  "name": "modular-blocks/html-sandbox-debug",
  "title": "HTML Sandbox DEBUG",
  "category": "modular-blocks",
  "icon": "code-standards",
  "description": "⚠️ DEBUG VERSION - Keine Capability-Prüfung! Nur zum Testen.",
  "keywords": ["html", "code", "iframe", "sandbox", "debug", "test"],
  "textdomain": "modular-blocks-plugin",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "viewScript": "file:./view.js",
  "attributes": {
    "htmlCode": {
      "type": "string",
      "default": ""
    },
    "cssCode": {
      "type": "string",
      "default": ""
    },
    "jsCode": {
      "type": "string",
      "default": ""
    },
    "externalScripts": {
      "type": "string",
      "default": ""
    },
    "isolationMode": {
      "type": "string",
      "default": "iframe",
      "enum": ["iframe", "shadow-dom"]
    },
    "sandboxFlags": {
      "type": "object",
      "default": {
        "allowScripts": true,
        "allowForms": false,
        "allowModals": false,
        "allowPointerLock": false,
        "allowPopups": false,
        "allowSameOrigin": false
      }
    },
    "autoHeight": {
      "type": "boolean",
      "default": true
    },
    "minHeight": {
      "type": "number",
      "default": 200
    },
    "maxHeight": {
      "type": "number",
      "default": 800
    }
  },
  "supports": {
    "html": false,
    "align": ["wide", "full"]
  }
}
