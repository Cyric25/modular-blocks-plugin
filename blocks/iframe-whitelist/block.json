{
    "apiVersion": 3,
    "name": "modular-blocks/iframe-whitelist",
    "version": "1.0.0",
    "title": "Iframe Whitelist",
    "category": "modular-blocks",
    "icon": "shield-alt",
    "description": "Externe Websites sicher einbetten (nur autorisierte URLs)",
    "keywords": ["iframe", "embed", "external", "simulation", "whitelist"],
    "textdomain": "modular-blocks-plugin",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css",
    "viewScript": "file:./view.js",
    "render": "file:./render.php",
    "attributes": {
        "url": {
            "type": "string",
            "default": ""
        },
        "height": {
            "type": "number",
            "default": 600
        },
        "aspectRatio": {
            "type": "string",
            "default": "custom",
            "enum": ["custom", "16:9", "4:3", "1:1"]
        },
        "allowFullscreen": {
            "type": "boolean",
            "default": true
        },
        "showBorder": {
            "type": "boolean",
            "default": false
        },
        "borderRadius": {
            "type": "number",
            "default": 4
        },
        "title": {
            "type": "string",
            "default": ""
        }
    },
    "supports": {
        "html": false,
        "align": ["wide", "full"],
        "spacing": {
            "margin": true,
            "padding": true
        }
    },
    "example": {
        "attributes": {
            "url": "",
            "title": "Externe Simulation",
            "height": 400
        }
    }
}
