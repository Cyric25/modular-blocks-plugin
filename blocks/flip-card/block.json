{
    "apiVersion": 3,
    "name": "modular-blocks/flip-card",
    "version": "1.0.0",
    "title": "Flip Card",
    "category": "custom-blocks",
    "icon": "image-rotate",
    "description": "Interaktive Flip Card mit zwei Bildern - dreht sich bei Klick oder Hover.",
    "keywords": ["flip", "card", "bilder", "animation", "interaktiv"],
    "textdomain": "modular-blocks-plugin",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./editor.css",
    "style": "file:./style.css",
    "viewScript": "file:./view.js",
    "attributes": {
        "frontImage": {
            "type": "object",
            "default": {
                "url": "",
                "alt": "",
                "id": null
            }
        },
        "backImage": {
            "type": "object",
            "default": {
                "url": "",
                "alt": "",
                "id": null
            }
        },
        "frontLabel": {
            "type": "string",
            "default": "Vorderseite"
        },
        "backLabel": {
            "type": "string",
            "default": "RÃ¼ckseite"
        },
        "flipDirection": {
            "type": "string",
            "default": "horizontal"
        },
        "flipTrigger": {
            "type": "string",
            "default": "click"
        },
        "autoFlip": {
            "type": "boolean",
            "default": false
        },
        "showLabels": {
            "type": "boolean",
            "default": true
        },
        "height": {
            "type": "number",
            "default": 400
        }
    },
    "supports": {
        "html": false,
        "align": ["wide", "full"],
        "spacing": {
            "margin": true,
            "padding": true
        }
    },
    "example": {
        "attributes": {
            "frontLabel": "Vorher",
            "backLabel": "Nachher"
        }
    }
}
