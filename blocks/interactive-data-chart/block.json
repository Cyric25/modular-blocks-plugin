{
    "apiVersion": 3,
    "name": "modular-blocks/interactive-data-chart",
    "version": "1.0.0",
    "title": "Interaktive Datentabelle & Diagramm",
    "category": "modular-blocks",
    "icon": "chart-bar",
    "description": "Tabelle zur Dateneingabe im Frontend mit automatischer Diagramm-Generierung",
    "keywords": ["chart", "table", "data", "interactive", "diagram", "plotly"],
    "textdomain": "modular-blocks-plugin",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./editor.css",
    "style": "file:./style.css",
    "viewScript": "file:./view.js",
    "attributes": {
        "chartType": {
            "type": "string",
            "default": "bar",
            "enum": ["bar", "line", "scatter", "pie"]
        },
        "chartTitle": {
            "type": "string",
            "default": "Mein Diagramm"
        },
        "xAxisLabel": {
            "type": "string",
            "default": "X-Achse"
        },
        "yAxisLabel": {
            "type": "string",
            "default": "Y-Achse"
        },
        "tableRows": {
            "type": "number",
            "default": 5
        },
        "tableColumns": {
            "type": "number",
            "default": 2
        },
        "showTable": {
            "type": "boolean",
            "default": true
        },
        "columnHeaders": {
            "type": "array",
            "default": ["Kategorie", "Wert"]
        },
        "showRegression": {
            "type": "boolean",
            "default": false
        },
        "showRegressionEquation": {
            "type": "boolean",
            "default": true
        }
    },
    "supports": {
        "html": false,
        "align": ["wide", "full"],
        "spacing": {
            "margin": true,
            "padding": true
        }
    },
    "example": {
        "attributes": {
            "chartTitle": "Monatliche Verkäufe",
            "xAxisLabel": "Monat",
            "yAxisLabel": "Verkäufe",
            "chartType": "bar"
        }
    }
}
