        },
        "statementGroups": {
            "type": "array",
            "default": [
                {
                    "id": "group1",
                    "statements": [
                        {
                            "id": "s1",
                            "text": "Die Primärstruktur beschreibt die lineare Abfolge der Aminosäuren.",
                            "isCorrect": true
                        },
                        {
                            "id": "s2",
                            "text": "Die Primärstruktur beschreibt die räumliche Faltung.",
                            "isCorrect": false
                        },
                        {
                            "id": "s3",
                            "text": "Die Primärstruktur wird durch Wasserstoffbrücken stabilisiert.",
                            "isCorrect": false
                        }
                    ]
                },
                {
                    "id": "group2",
                    "statements": [
                        {
                            "id": "s4",
                            "text": "Die Sekundärstruktur umfasst Alpha-Helix und Beta-Faltblatt.",
                            "isCorrect": true
                        },
                        {
                            "id": "s5",
                            "text": "Die Sekundärstruktur beschreibt die Aminosäuresequenz.",
                            "isCorrect": false
                        }
                    ]
                }
            ]
        },
        "progressiveReveal": {
            "type": "boolean",
            "default": true
        },
        "showFeedback": {
            "type": "boolean",
            "default": true
        },
        "showRetry": {
            "type": "boolean",
            "default": true
        },
        "showSolution": {
            "type": "boolean",
            "default": true
        },
        "shuffleStatements": {
            "type": "boolean",
            "default": true
        },
        "shuffleGroups": {
            "type": "boolean",
            "default": false
        },
        "penaltyPerWrongAnswer": {
            "type": "number",
            "default": 1
        },
        "successText": {
            "type": "string",
            "default": "Ausgezeichnet! Sie haben alle richtigen Aussagen gefunden."
        },
        "partialSuccessText": {
            "type": "string",
            "default": "Gut gemacht! Sie haben die meisten richtigen Aussagen gefunden."
        },
        "failText": {
            "type": "string",
            "default": "Versuchen Sie es noch einmal."
        },
        "correctFeedback": {
            "type": "string",
            "default": "Richtig! Diese Aussage wurde zur Zusammenfassung hinzugefügt."
        },
        "incorrectFeedback": {
            "type": "string",
            "default": "Falsch. Versuchen Sie eine andere Aussage."
        },
        "summaryTitle": {
            "type": "string",
            "default": "Ihre Zusammenfassung:"
        }
    },
    "supports": {
        "html": false,
        "align": ["wide", "full"],
        "spacing": {
            "margin": true,
            "padding": true
        }
    },
    "example": {
        "attributes": {
