    "textdomain": "modular-blocks-plugin",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css",
    "viewScript": "file:./view.js",
    "attributes": {
        "title": {
            "type": "string",
            "default": "Zusammenfassung erstellen"
        },
        "description": {
            "type": "string",
