{
    "apiVersion": 3,
    "name": "modular-blocks/chart-block",
    "version": "1.0.0",
    "title": "Chemie-Diagramm",
    "category": "widgets",
    "icon": "chart-line",
    "description": "Interaktive wissenschaftliche Diagramme mit Plotly.js für Chemie-Anwendungen",
    "keywords": ["chart", "graph", "diagram", "chemistry", "plotly", "science"],
    "textdomain": "modular-blocks-plugin",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css",
    "viewScript": "file:./view.js",
    "attributes": {
        "chartType": {
            "type": "string",
            "default": "scatter",
            "enum": ["scatter", "bar", "line", "heatmap", "3d"]
        },
        "chartData": {
            "type": "string",
            "default": ""
        },
        "chartTemplate": {
            "type": "string",
            "default": "",
            "enum": ["", "titration", "kinetics", "phase", "lineweaver", "ir"]
        },
        "chartTitle": {
            "type": "string",
            "default": "Diagramm"
        },
        "xAxisLabel": {
            "type": "string",
            "default": "X-Achse"
        },
        "yAxisLabel": {
            "type": "string",
            "default": "Y-Achse"
        },
        "showLegend": {
            "type": "boolean",
            "default": true
        },
        "width": {
            "type": "number",
            "default": 800
        },
        "height": {
            "type": "number",
            "default": 600
        }
    },
    "supports": {
        "html": false,
        "align": ["wide", "full"],
        "spacing": {
            "margin": true,
            "padding": true
        }
    },
    "example": {
        "attributes": {
            "chartTemplate": "titration",
            "chartTitle": "Säure-Base-Titration",
            "xAxisLabel": "Volumen Base (mL)",
            "yAxisLabel": "pH-Wert"
        }
    }
}
